<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="800.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bill.MainWindow">
    <children>
        <TextField fx:id="userInput" onAction="#handleUserInput" prefHeight="41.0"
                   AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="80.0" />

        <Button fx:id="sendButton" onAction="#handleUserInput" prefHeight="41.0" prefWidth="76.0" text="Send"
                AnchorPane.bottomAnchor="1.0" AnchorPane.rightAnchor="1.0" />

        <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" prefWidth="400.0"
                    AnchorPane.bottomAnchor="45.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="1.0">
            <content>
                <VBox fx:id="dialogContainer" prefWidth="388.0" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>